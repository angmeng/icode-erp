<h1>Listing sales_order_items</h1>

<table>
  <tr>
    <th>Sales order</th>
    <th>Product</th>
    <th>Description</th>
    <th>Quantity</th>
    <th>Unit measurement</th>
    <th>Eta</th>
    <th>Unit price</th>
    <th>Status</th>
    <th>Customer po</th>
    <th>Part no</th>
    <th>Current stock</th>
    <th>Complete qty</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sales_order_items.each do |sales_order_item| %>
  <tr>
    <td><%= sales_order_item.sales_order_id %></td>
    <td><%= sales_order_item.product_id %></td>
    <td><%= sales_order_item.description %></td>
    <td><%= sales_order_item.quantity %></td>
    <td><%= sales_order_item.unit_measurement_id %></td>
    <td><%= sales_order_item.eta %></td>
    <td><%= sales_order_item.unit_price %></td>
    <td><%= sales_order_item.status %></td>
    <td><%= sales_order_item.customer_po %></td>
    <td><%= sales_order_item.part_no %></td>
    <td><%= sales_order_item.current_stock %></td>
    <td><%= sales_order_item.complete_qty %></td>
    <td><%= link_to 'Show', sales_order_item %></td>
    <td><%= link_to 'Edit', edit_sales_order_item_path(sales_order_item) %></td>
    <td><%= link_to 'Destroy', sales_order_item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

