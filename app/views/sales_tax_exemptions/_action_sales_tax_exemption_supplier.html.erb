<div class="left_icon_tag">
  <% if roles.include?(InventoryManagementSystem::SALES_TAX_EXEMPTION_SUPPLIER_NEW) %>
    <%= link_to "Add - New Sales Tax Exemption For Vendor", new_sales_tax_exemption_path, :class => "iframe_1600x900 k-button font_bold", "data-fancybox-type" => "iframe" %>
  <% else %>
    <%= disabled_style "Add - New Sales Tax Exemption For Vendor" %>
  <% end %>
  
  <% if roles.include?(InventoryManagementSystem::SALES_TAX_EXEMPTION_SUPPLIER_SHOW_HISTORIES) %>
    <span id="on_show_history"><%= disabled_style "Show Histories For Vendor" %></span>
  <% else %>
    <%= disabled_style "Show Histories For Vendor" %>
  <% end %>
</div>

<div class="icon_tag">
  
  <% if roles.include?(InventoryManagementSystem::SALES_TAX_EXEMPTION_SUPPLIER_SHOW) %>
    <span id="on_show" showClass="show_without_refresh_page_800x600"><%= not_link_show %></span>
  <% else %>
    <%= not_link_show %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::SALES_TAX_EXEMPTION_SUPPLIER_EDIT) %>
    <span id="on_edit" editClass="iframe_800x600"><%= not_link_edit %></span>
  <% else %>
    <%= not_link_edit %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::SALES_TAX_EXEMPTION_SUPPLIER_KIV) %>
     <span id="on_kiv"><%= not_link_kiv %></span>
  <% else %>
    <%= not_link_kiv %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::SALES_TAX_EXEMPTION_SUPPLIER_PRINTABLE) %>
    <span id="on_printable"><%= not_link_printable %></span>
  <% else %>
    <%= not_link_printable %>
  <% end %>
   
  <%= link_home_button %>

</div>