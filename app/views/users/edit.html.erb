<div class="title_head"><strong style="color:white;">EDITING USER</strong></div>

<%= form_tag @user, :url => edit_user_path(@user), :method => :put do  %>
  <div id="valid_user_form">
    <div id="user_strip">
      <ul>
        <li class="k-state-active">User Account</li>
        <li>Inventory Management System</li>
        <li>Inventory Management System II - Product</li>
        <li>Inventory Management System III - Report</li>
      </ul>
      <div><%= render "edit_user_account" %></div>
      <div><%= render "management_checkbox" %></div>
      <div><%= render "management_product" %></div>
      <div><%= render "management_report" %></div>
    </div>
  </div>
  <div class="icon_tag">
    <%= link_save_button %>
    <%= link_close_button %>
  </div>
<% end %>

<%= render "js_user" %>
