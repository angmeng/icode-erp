<div class="left_icon_tag">
  <% if roles.include?(InventoryManagementSystem::CUSTOMER_NEW) %>
    <%= link_to 'Add - New Customer', new_trade_company_path(:option => TradeCompany::CUSTOMER), :class => "iframe_1600x900 k-button font_bold", "data-fancybox-type" => "iframe" %>
  <% else %>
    <%= disabled_style "Add - New Customer" %>
  <% end %>
</div>

<div class="icon_tag">
  <% if roles.include?(InventoryManagementSystem::CUSTOMER_SHOW) %>
    <span id="on_show" showClass="show_without_refresh_page_1024x800"><%= not_link_show %></span>
  <% else %>
    <%= not_link_show %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::CUSTOMER_EDIT) %>
    <span id="on_edit" editClass="iframe_1600x900"><%= not_link_edit %></span>
  <% else %>
    <%= not_link_edit %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::CUSTOMER_ACTION_KIV) %>
    <span id="on_kiv"><%= not_link_kiv %></span>
  <% else %>
    <%= not_link_kiv %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::CUSTOMER_PRINTABLE) %>
    <span id="on_printable"><%= not_link_printable %></span>
  <% else %>
    <%= not_link_printable %>
  <% end %>
   
  <%= link_home_button %>
</div>