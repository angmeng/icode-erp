<div class="left_icon_tag">
  
  <% if roles.include?(InventoryManagementSystem::VENDOR_NEW) %>
    <%= link_to 'Add - New Supplier', new_trade_company_path(:option => TradeCompany::SUPPLIER), :class => "iframe_1600x900 k-button", "data-fancybox-type" => "iframe" %>
  <% else %>
    <span id="disabled_on_left" class="k-button">Add - New Supplier</span>
  <% end %>
      
</div>

<div class="icon_tag">
  
  <% if roles.include?(InventoryManagementSystem::VENDOR_SHOW) %>
    <span id="on_show" showClass="show_without_refresh_page_1024x800"><%= not_link_show %></span>
  <% else %>
    <span><%= not_link_show %></span>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::VENDOR_EDIT) %>
    <span id="on_edit" editClass="iframe_1600x900"><%= not_link_edit %></span>
  <% else %>
    <span><%= not_link_edit %></span>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::VENDOR_ACTION_KIV) %>
     <span id="on_kiv"><%= not_link_kiv %></span>
  <% else %>
    <span><%= not_link_kiv %></span>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::VENDOR_PRINTABLE) %>
    <span id="on_printable"><%= not_link_printable %></span>
  <% else %>
    <span><%= not_link_printable %></span>
  <% end %>
   
  <%= link_home_button %>

</div>