<div class="left_icon_tag">
  <% if roles.include?(InventoryManagementSystem::PRICE_CONTROL_NEW) %>
    <%= link_to "New Product Price Control", new_price_control_path, :class => "iframe_1600x900 k-button", "data-fancybox-type" => "iframe" %>
  <% else %>
    <span class="k-button">New Product Price Control</span>
  <% end %>
</div>

<div class="center_icon_tag">
  <div class="digg_pagination"><%= will_paginate @price_controls, :container => false, :previous_label => '<', :next_label => '>' %></div>
</div>

<div class="icon_tag">
  
  <% if roles.include?(InventoryManagementSystem::PRICE_CONTROL_SHOW) %>
    <span id="on_show" showClass="show_without_refresh_page_1600x900" ><%= not_link_show %></span>
  <% else %>
    <span><%= not_link_show %></span>
  <% end %>
    
  <span><%= not_link_edit %></span>
  
  <% if roles.include?(InventoryManagementSystem::PRICE_CONTROL_DROP_KIV) %>
    <span id="on_kiv"><%= not_link_kiv %></span>
  <% else %>
    <span><%= not_link_kiv %></span>
  <% end %>
  
  <% if roles.include?(InventoryManagementSystem::PRICE_CONTROL_PRINTABLE) %>
    <span id="on_printable"><%= not_link_printable %></span>
  <% else %>
    <span><%= not_link_printable %></span>
  <% end %>
  
  <%= link_home_button %>
  
</div>