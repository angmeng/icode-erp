<h1> Sales tax exemption </h1>

<div>
    <%= form_for @sales_tax_exemption, :url => sales_tax_exemption_report_reports_path  do |f| %>
      <table>
        <tr>
          <td>Sales Tax Exemption :</td>
          <td><%= f.text_field :sales_tax_exemption_no_sw, :size => 12 %> To
            <%= f.text_field :sales_tax_exemption_no_ew, :size => 12 %></td>
          <td>Tarif Code </td>
          <td><%= f.text_field :tarif_code_sw , :size => 10 %></td>
        </tr>
        <tr>
          <td>Invoice Period</th>
          <td><%= f.text_field :period_start_gte, :size => 9 , :id=> "kendo_date" %> To 
          <%= f.text_field :period_end_lte , :size => 9 , :id=> "kendo_date" %></td>
        </tr>
        
        <tr>
        <td><%= f.submit "Search" %></td>
         </tr>
      </table>
  <% end %>
</div>

<hr />

<div class="fix_1600x900_h450">
	<fieldset>
	
	<table id="grid_h495">
	<thead>
		<tr  class="header_line">
			<th>No.</th>
			<th>Trade company</th>
			<th>Sales Tax Exemption</th>
			<th>Tarif Code</th>
			<th>Inv No.</th>
			<th>Date</th>
			<th>Amount</th>
		</tr>
	</thead>
	
	<tbody>
	<% @show_sale_tax_exemption_report.each_with_index do |pri , index| %>
		<tr class="<%= cycle("odd_line", "even_line") %>">
			<td align="center"><%= index + 1 %></td>
			<td align="center"><%= pri.trade_company.name rescue '-'%></td>
			<td align="center"><%= pri.sales_exemption_no rescue'-' %></td>
			<td align="center"><%= pri.tarif_code rescue '-' %></td>
			<td align="center"><%= pri.ste_no rescue '-' %></td>
			<td align="center"><%= pri.period_start rescue '-' %></td>
			<td align="center"><%= pri.remaining_total rescue '-' %></td>

		</tr>
		<% end %>
	</tbody>
		
	</table>
	

	</fieldset>

	<div style="float:left">
	<span><%#= link_to "Excel report" , detail_po_report_reports_path(:po_excel_ids => @take_ids, :format => "xls" )%></span>
	</div>

	<div style="float:right;">

	<span><%= not_link_show %></span>

	<span><%= not_link_edit %></span><%#= submit_tag "show" , :class => "k-button" %>

	<span><%= not_link_recover %></span>

   <span><%= link_to "PDF report" , pdf_sale_tax_exemption_report_reports_path(:ste_ids => @take_ids, :format => "pdf" ), :target=>"_blank" %></span>

   <%= link_close_button %>
</div>

</div>
