<h2> Sales Tax Exemption Report</h2>


<div>


		<% if @excel_sales_tax_exemption_report.present? %>
	<table id="jgrid" class="zebraLight normal_table_black" >
		<thead>
			<tr>
				
				<th>Trade company / Sales Tax Exemption</th>
				<th>Date</th>
				<th>Inv No.</th>
				<th>Tarif Code</th>
				<th>Remaining Total</th>
			</tr>
		</thead>

		<tbody>
		<% @excel_sales_tax_exemption_report.each do |ste| %>
			<tr>
        
				<td><%= ste.trade_company.name rescue '-' %> / <%= ste.sales_tax_exemption_no %></td>
				<td><%= ste.period_start rescue '-' %></td>
				<td><%= ste.ste_no rescue '-' %></td>
				<td><%= ste.tarif_code rescue '-' %></td>
				<td><%= ste.remaining_total rescue '-' %></td>

			</tr>
			
		<% end %>
		

		
		</tbody>

		<% else %>
			no report found
		<% end %>
	</table>


	
  	

</div>

