<div class="title_head"><strong style="color:white;">INVENTORY REPORT</strong></div>

<!--<input type="checkbox" name="all" id="checkall" />Check All-->

  <div class="popup_content">
          <%= form_tag pdf_inventory_report_reports_path ,:target=>"_blank" ,:method =>"get" do %>
          <%#= form_tag pdf_inventory_report_reports_path ,:name=>"myform" ,:target=>"_blank" ,:method =>"get" do %>
          <%#*<fieldset>%>
                  <table id="jdataTable">
                    <thead>
                      <tr>
                        <th></th>
                        <th>No.</th>
                        <th>Product ID</th>
                        <th>Description</th>
                        <th>Stock In</th>
                        <th>Stock Out</th>
                        <th>Remaining</th>
                        <th>Transaction</th>
                        <%#*<th>Quantity</th>%>
                      </tr>
                    </thead>
                <tbody>
                  <% arr = [] %>

                  <% @show_inventory_report.each_with_index do |pri , index| %>
          
                      <tr>
                       
                        <td align="center"><%= check_box_tag "in_ids[]" , pri.id %></td>
                        <td align="center"><%= index + 1 %></td>
                        <td align="center"><%= render '/product_categories/join_product_category' , :pc => pri %></td>
                        <td align="center"><%= pri.product.desc rescue '-' %></td>
                        <td align="center"><%= pri.stock_in rescue '-'%></td>
                        <td align="center"><%= pri.stock_out rescue '-'%></td>
                        <td align="center"><%= pri.amount %></td>
                        <td align="center"><%= inventory_issue_description(pri.inventory_issue_id) rescue '-' %></td>
                              
                      </tr>
          

                          <% if pri.amount.present? %>
                            <% arr << pri.amount * pri.amount %>
                          <% end %>

                        <% end %>
                    </tbody>
                  </table>

          <%#*<table>%>
    <%#*<div style="float:right;">%>
              <%#*<tr >%>
              <%#*<td>%>
                <%#*Total Quantity :%>
    <%#*</td>%>
              <%#*<td >%>
<%#= two_precision(arr.sum) %>
    <%#*</td>%>
              <%#*</tr>%>
              <%#*</div>%>
          <%#*</table>%>
    </div>
          <%#*</fieldset>%>

    <div class="icon_tag" style="float:left">
      <span><%= submit_tag "Excel Report" , :class => "k-button" %><%#= not_link_excel %><%#= link_to "Excel Report", excel_inventory_report_reports_path(:inventory_ids => @take_ids,:format=>"xls") , :target=>"_blank", :method => "get" , :class=>"k-button" %></span> 
    </div>

    <div class="icon_tag" style="float:right;">

      <span><%#= not_link_show %><%= submit_tag "Show" , :class => "k-button" %></span>
      
      <span><%= not_link_edit %></span>
      <span><%= not_link_recover %></span>

      
      <span><%= submit_tag "PDF Report" , :class => "k-button" %><%#= link_to "PDF Report" , pdf_inventory_report_reports_path(:inventory_ids => @take_ids), :target=>"_blank" , :method => "get" ,:class =>"k-button" %></span>
      <% end %>

      <%= link_close_button %>
    </div>





