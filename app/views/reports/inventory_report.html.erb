                        <%#*<th>Quantity</th>%>
                      </tr>
                    </thead>
                <tbody>
                  <% arr = [] %>

                  <% @show_inventory_report.each_with_index do |pri , index| %>
          
                      <tr>
                       
                        <td align="center"><%= check_box_tag "in_ids[]" , pri.id %></td>
                        <td align="center"><%= index + 1 %></td>
                        <td align="center"><%= render '/product_categories/join_product_category'  , :pc => pri %></td>
                        <td align="center"><%= pri.product.desc rescue '-' %></td>
                        <td align="center"><%= pri.stock_in rescue '-'%></td>
                        <td align="center"><%= pri.stock_out rescue '-'%></td>
                        <td align="center"><%= pri.amount %></td>
                        <td align="center"><%= inventory_issue_description(pri.inventory_issue_id) rescue '-' %></td>
                              
                      </tr>
          

                          <% if pri.amount.present? %>
                            <% arr << pri.amount * pri.amount %>
                          <% end %>

                        <% end %>
                    </tbody>
                  </table>

