          <%#*<fieldset>%>
          <table id="products" class="display" data-source="<%= inventory_report_reports_path(format: "json") %> ">

                    <thead>
                      <tr>
                        <th></th>
                        <th>No.</th>
                        <th>Product ID</th>
                        <th>Description</th>
                        <th>Stock In</th>
                        <th>Stock Out</th>
