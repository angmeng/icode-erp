<table>
  <tr>
    <td><b>Receipt No.</b></td>
    <td><%= f.text_field :receipt_no_contains, :class => "k-textbox" %></td>
  </tr>
  <tr>
    <td><b>Receipt Date</b></td>
    <td>
      <% if @search.receipt_date_gte.present? %>
        <%= f.text_field :receipt_date_gte, :value => @search.receipt_date_gte.strftime("%d-%m-%Y"), :include_blank => true, :class => "mkendo_date" %>
      <% else %>
        <%= f.text_field :receipt_date_gte, :include_blank => true, :class => "mkendo_date" %>
      <% end %>
       - 
      <% if @search.receipt_date_lte.present? %>
        <%= f.text_field :receipt_date_lte, :value => @search.receipt_date_lte.strftime("%d-%m-%Y"), :include_blank => true, :class => "mkendo_date" %>
      <% else %>
        <%= f.text_field :receipt_date_lte, :include_blank => true, :class => "mkendo_date" %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td colspan="10" align="right"><%= f.submit 'Search',:class => "k-button" %></td>
  </tr>
</table>