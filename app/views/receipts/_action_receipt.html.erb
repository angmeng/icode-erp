<div class="left_icon_tag">
  <% if roles.include?(InventoryManagementSystem::RECEIPT_ADD) %>
    <%= link_to "Add - New Receipt", new_receipt_path, :class => "iframe_1600x900 k-button opac-icon font_bold", "data-fancybox-type" => "iframe" %>
  <% else %>
    <%= disabled_style "Add - New Receipt" %>
  <% end %>
</div>

<div class="icon_tag">
  
  <% if roles.include?(InventoryManagementSystem::RECEIPT_SHOW) %>
    <span id="on_show" showClass="show_without_refresh_page_800x600"><%= not_link_show %></span>
  <% else %>
    <%= not_link_show %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::RECEIPT_EDIT) %>
    <span id="on_edit" editClass="iframe_1600x900"><%= not_link_edit %></span>
  <% else %>
    <%= not_link_edit %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::RECEIPT_KIV) %>
    <span id="on_kiv"><%= not_link_kiv %></span>
  <% else %>
    <%= not_link_kiv %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::RECEIPT_PRINTABLE) %>
    <span id="on_printable"><%= not_link_printable %></span>
  <% else %>
    <%= not_link_printable %>
  <% end %>
  
  <%= link_home_button %>

</div>