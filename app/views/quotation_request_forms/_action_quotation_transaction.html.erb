<div class="left_icon_tag">
  <% if roles.include?(InventoryManagementSystem::QR_NEW_N_PENDING) %>
    <%= link_to 'New & Pending QRs', pending_quotation_quotation_request_forms_path, :class => "iframe_1600x900 k-button font_bold", "data-fancybox-type" => "iframe" %>
  <% else %>
    <%= disabled_style("New & Pending QRs") %>
  <% end %>
  
  <% if action_name == "index" %>
    <% if roles.include?(InventoryManagementSystem::QR_TRANSACTION_MAIL) %>
      <span id="on_mail" showClass="show_without_refresh_page_800x450"><span class="k-button" style="color: grey; background-color: white; cursor: default;">Mail</span></span>
    <% else %>
      <span class="k-button" style="color: grey; background-color: white; cursor: default;">Mail</span>
    <% end %>
  <% end %>
</div>

<div class="icon_tag">
  
  <% if roles.include?(InventoryManagementSystem::QR_TRANSACTION_SHOW) %>
    <span id="on_show" showClass="show_without_refresh_page_1600x900"><%= not_link_show %></span>
  <% else %>
    <%= not_link_show %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::QR_TRANSACTION_EDIT) %>
    <span id="on_edit" editClass="iframe_1600x900"><%= not_link_edit %></span>
  <% else %>
    <%= not_link_edit %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::QR_TRANSACTION_KIV) %>
    <span id="on_kiv"><%= not_link_kiv %></span>
  <% else %>
    <%= not_link_kiv %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::QR_TRANSACTION_PRINTABLE) %>
    <span id="on_printable_qr"><%= not_link_printable %></span>
  <% else %>
    <%= not_link_printable %>
  <% end %>
   
  <%= link_home_button %>

</div>