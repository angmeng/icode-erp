<div style="float:left; padding: 5px;">
  <% if action_name == "index" %>
    <% if roles.include?(InventoryManagementSystem::QR_TRANSACTION_MAIL) %>
      <span id="on_mail" showClass="show_without_refresh_page_800x450">
        <%= image_tag("mail.png", :alt => "Mail", :title => "Mail", :class => "opac_icon") %>
      </span>
    <% else %>
      <%= image_tag("mail.png", :alt => "Mail", :title => "Mail", :class => "opac_icon") %>
    <% end %>
  <% end %>
</div>

<div class="icon_tag">
  
  <% if roles.include?(InventoryManagementSystem::QR_TRANSACTION_SHOW) %>
    <span id="on_show" showClass="show_without_refresh_page_1600x900"><%= not_link_show %></span>
  <% else %>
    <span class="word_opac"><%= not_link_show %></span>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::QR_TRANSACTION_EDIT) %>
    <span id="on_edit" editClass="iframe_1600x900"><%= not_link_edit %></span>
  <% else %>
    <span class="word_opac"><%= not_link_edit %></span>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::QR_TRANSACTION_KIV) %>
     <span id="on_kiv"><%= not_link_kiv %></span>
  <% else %>
    <span class="word_opac"><%= not_link_kiv %></span>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::QR_TRANSACTION_PRINTABLE) %>
    <span id="on_printable_qr"><%= not_link_printable %></span>
  <% else %>
    <span class="word_opac"><%= not_link_printable %></span>
  <% end %>
   
  <%= link_close_button %>

</div>