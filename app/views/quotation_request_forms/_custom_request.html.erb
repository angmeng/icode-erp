<table>
  <tr>
    <% if action_name == "edit" %>
    <td width="200"><b>QR No#</b></td>
      <td><%= @quotation_request_form.quotation_request_no rescue '0' %></td>
    <% else %>
      <td width="200"><b>Current QR No.</b></td>
      <td><%= company.sn_quotation_request_no + 1 %></td>
    <% end %>
  </tr>
  
  <% if action_name == "edit" %>
    <% if @quotation_request_form.status == QuotationRequestForm::CONFIRMED %>
      <tr>
        <td>Customer PO No#</td>
        <td><%= f.text_field :customer_po_no %></td>
      </tr>
    <% end %>
  <% end %>

  <tr>
    <td><b>Customer Company</b></td>
    <td>      
      <%= f.text_field :customer_name, :style => "width:400px;", :id => "autoComplete_customers", :onblur => "place_customer_id_to_trade_company_id(this)" %>
      <%= f.hidden_field :trade_company_id, :size => 8 %>
      
      <b>QRF Date</b>
      <% if @quotation_request_form.qrf_date.present? %>
        <%= f.text_field :qrf_date, :value => @quotation_request_form.qrf_date.strftime('%d-%m-%Y') %>
      <% else %>
        <%= f.text_field :qrf_date, :value => Date.today.strftime('%d-%m-%Y') %>
      <% end %>
    </td>
  </tr>

  <tr>
    <td><b>Description</b></td>
    <td><%= f.text_area :description, :rows => 2 %></td>
  </tr>    

  <tr>
    <td><b>Internal Dimension, mm</b></td>
    <td>
      (L) <%= f.text_field :internal_dimensen_length, :size => 10, :class => "two_zero_length" %>
      (W) <%= f.text_field :internal_dimensen_width,:size => 10, :class => "two_zero_width" %>
      (H) <%= f.text_field :internal_dimensen_height, :size => 10, :class => "two_zero_height" %>
      (<b>Tolerance</b>: &plusmn; <%= f.text_field :internal_dimensen_tolerance, :size => 10, :class => "two_zero_tolerance" %>)
    </td>
  </tr>

  <tr>
    <td><b>External Dimension, mm</b></td>
    <td>
      (L) <%= f.text_field :external_dimensen_length, :size => 10, :class => "two_zero_length" %>
      (W) <%= f.text_field :external_dimensen_width,:size => 10, :class => "two_zero_width" %>
      (H) <%= f.text_field :external_dimensen_height, :size => 10, :class => "two_zero_height" %>
      (<b>Tolerance</b>: &plusmn; <%= f.text_field :external_dimensen_tolerance, :size => 10, :class => "two_zero_tolerance" %>)
    </td>
  </tr>

  <tr>
    <td><b>Open Size, inch</b></td>
    <td>
      (L) <%= f.text_field :open_size_length, :size => 10, :class => "two_zero_open_length"  %>
      (W) <%= f.text_field :open_size_width, :size => 10, :class => "two_zero_open_width"  %>
    </td>
  </tr>
</table>

<fieldset style="width: 800px;">
  <legend>
    <% if @field_sets.present? %>
      <%= check_box_tag "field_set[]", QuotationRequestForm::CUSTOM_FIELDSET, @field_sets.include?(QuotationRequestForm::CUSTOM_FIELDSET) %>PRODUCTION
    <% else %>
      <%= check_box_tag "field_set[]", QuotationRequestForm::CUSTOM_FIELDSET %>PRODUCTION
    <% end %>
  </legend>

  <% if @field_sets.present? %>
    <% if @field_sets.include?(QuotationRequestForm::CUSTOM_FIELDSET) %>

      <table>
        <tr>
          <td width="160"><b>Brand</b></td>
          <td><%= f.text_field :custom_stock_code %></td>
        </tr>

        <tr>
          <td><b>Category</b></td>
          <td><%= f.text_field :box_part_no %></td>
        </tr>
        
        <tr>
          <td><b>No of Size</b></td>
          <td><%= f.text_field :lot_size_no, :size => 3, :onblur => "dropdown_lotsize(this)", :class => "two_digit_" %></td>
        </tr>

        <tr>
          <td></td>
          <td>
            <span id="lot_size">
              <% if @quotation_request_form.custom_productions.present? %>
                <table>
                  <tr>
                    <th>Size</th>
                    <th>Part/Art No.</th>
                    <th>Cat/Reorder No.</th>
                    <th>Customer Stock Code</th>
                  </tr>
                  
                  <% @quotation_request_form.custom_productions.each do |cp| %>
                    <tr>
                      <td><%= text_field_tag "lot_size[#{cp.id}][size]", cp.lot_size, :size => 3 %></td>
                      <td><%= text_field_tag "part_no[#{cp.id}][part]", cp.part_no %></td>
                      <td><%= text_field_tag "category_no[#{cp.id}][category]", cp.category_no %></td>
                      <td><%= text_field_tag "stock_ref[#{cp.id}][ref]", cp.stock_reference, :size => 40 %></td>
                    </tr>
                  <% end %>
                </table>
              <% end %>
            </span>
          </td>
        </tr>
      </table>
    <% else %>

      <%= render "disabled_custom", :f => f %>

    <% end %>
  <% else %>
  
    <%= render "disabled_custom", :f => f %>
  
  <% end %>
</fieldset>