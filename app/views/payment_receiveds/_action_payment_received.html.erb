<div class="left_icon_tag">
  <% if roles.include?(InventoryManagementSystem::PAYMENT_RECEIVED_ADD) %>
    <%= link_to "Add - New Payment Received", new_payment_received_path, :class => "iframe_800x450 k-button font_bold", "data-fancybox-type" => "iframe" %>
  <% else %>
    <%= disabled_style "Add - New Payment Received" %>
  <% end %>
</div>

<div class="center_icon_tag">
  <div class="digg_pagination"><%= will_paginate @payment_receiveds, :container => false, :previous_label => '<', :next_label => '>' %></div>
</div>

<div class="icon_tag">
  
  <% if roles.include?(InventoryManagementSystem::PAYMENT_RECEIVED_SHOW) %>
    <span id="on_show" showClass="show_without_refresh_page_800x450"><%= not_link_show %></span>
  <% else %>
    <%= not_link_show %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::PAYMENT_RECEIVED_EDIT) %>
    <span id="on_edit" editClass="iframe_800x450"><%= not_link_edit %></span>
  <% else %>
    <%= not_link_edit %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::PAYMENT_RECEIVED_KIV) %>
     <span id="on_kiv"><%= not_link_kiv %></span>
  <% else %>
    <%= not_link_kiv %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::PAYMENT_RECEIVED_PRINTABLE) %>
    <span id="on_printable"><%= not_link_printable %></span>
  <% else %>
    <%= not_link_printable %>
  <% end %>
  
  <%= link_home_button %>

</div>