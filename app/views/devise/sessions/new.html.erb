<div class="centered">
  <fieldset>
    <div class="header_login">
      <div align="right">LOGIN</div>
    </div>
    
    <br/>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <table>
        <tr>
          <td width="80" class="bolder"><%= f.label :email %></td>
          <td><%= f.email_field :email, :id => "input_box" %></td>
        </tr>
      
        <tr>
          <td class="bolder"><%= f.label :password %></td>
          <td><%= f.password_field :password, :id => "input_box" %></td>
        </tr>
        
        <tr>
          <% if devise_mapping.rememberable? -%>
            <td colspan="2" align="right"><%= f.check_box :remember_me %> <%= f.label :remember_me %></td>
          <% end -%>
        </tr>
        
        <tr><td>&nbsp;</td></tr>
        
        <tr>
          <td colspan="2" align="right"><%= f.submit "Log In" %></td>
        </tr>
      </table>
    <% end %>
  
    <%= render "links" %>
  </fieldset>
</div>