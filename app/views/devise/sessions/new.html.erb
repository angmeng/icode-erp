<div class="centered">
  <fieldset>
    <div class="header_login">
      <div align="right">LOGIN</div>
    </div>
    
    <br/>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <table>
        <tr>
          <td width="80"><b>NAME</b></td>
          <td><%= f.text_field :name, :class => "input_box" %></td>
        </tr>
      
        <tr>
          <td><b>PASSWORD</b></td>
          <td><%= f.password_field :password, :class => "input_box" %></td>
        </tr>
        
        <tr>
          <% if devise_mapping.rememberable? -%>
            <td colspan="2" align="right"><%= f.check_box :remember_me %> <%= f.label :remember_me %></td>
          <% end -%>
        </tr>
        
        <tr>
          <td style="float:left;"><h4>Version 0.1.2</h4></td>
          <td colspan="2" align="right"><%= f.submit "Log In", :name => "logging_in" %></td>
        </tr>

      </table>
    <% end %>
  
    <%= render "links" %>
  </fieldset>
</div>