<div class="left_icon_tag">
  <% if roles.include?(InventoryManagementSystem::FORMULATION_NEW) %>
    <b><%= link_to "Add - New Formulation", new_formulation_path, :class => "iframe_800x450 k-button", "data-fancybox-type" => "iframe" %></b>
  <% else %>
    <%= disabled_style "Add - New Formulation" %>
  <% end %>
</div>

<div class="icon_tag">
  <% if roles.include?(InventoryManagementSystem::FORMULATION_SHOW) %>
    <span id="on_show" showClass="show_without_refresh_page_800x450"><%= not_link_show %></span>
  <% else %>
    <%= not_link_show %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::FORMULATION_EDIT) %>
    <span id="on_edit" editClass="iframe_800x450"><%= not_link_edit %></span>
  <% else %>
    <%= not_link_edit %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::FORMULATION_KIV) %>
    <span id="on_kiv"><%= not_link_kiv %></span>
  <% else %>
    <%= not_link_kiv %>
  <% end %>

  <% if roles.include?(InventoryManagementSystem::FORMULATION_PRINTABLE) %>
    <span id="on_printable"><%= not_link_printable %></span>
  <% else %>
    <%= not_link_printable %>
  <% end %>
   
  <%= link_home_button %>
</div>