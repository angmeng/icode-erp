        <% end %>
      </td>

      <td width="60" align="center">
        <% if roles.include?(InventoryManagementSystem::QR_MENU) or roles.include?(InventoryManagementSystem::SO_MENU) or roles.include?(InventoryManagementSystem::DO_MENU) %>
          <%= link_to image_tag("invoice_icon.png", :alt => "Sales", :title => "Sales", :class => "cube35"), '#', :id => "show_sales"  %>
