<div style="background-color: gainsboro;">
  <div id="main_pr">  
    <table>
      <tr>
        <th class="block_box" width="150">PURCHASE REQUISITION</th>
        
        <% if roles.include?(InventoryManagementSystem::PR_MENU) %>
        
