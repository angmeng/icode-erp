        <th><%= image_tag "arrow-bottom.png", :width => "30px" %></th>
      </tr>

      <tr>
          <th class="block_box">DELIVERY ORDER</th>
          
          <% if roles.include?(InventoryManagementSystem::DO_MENU) %>
          
            <% if roles.include?(InventoryManagementSystem::DO_TRANSACTION) %>
              <td><%= link_to "Delivery Orders Data", delivery_orders_path,:class => "k-button" %></td>
            <% else %>
              <td><%= disabled_style("Delivery Orders Data") %></td>
            <% end %>
              
          <% end %>
      </tr>      
      
    </table>
