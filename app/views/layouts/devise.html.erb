<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title>Etheos Imprint eResourse Planning System</title>
  <link href="/assets/application.css?body=1" media="all" rel="stylesheet" type="text/css" />
  <%= stylesheet_link_tag "kendo.blueopal.min", "kendo.common.min" %>
  <script>
    $(function() {
      $("input").bind("keypress", function(e) {
          if (e.keyCode == 13){
              if ($(this).attr("name") == "user[password]" || $(this).attr("name") == "user[name]") return true;
              else return false;
          }
      });
    });
  </script>
  <%= yield :head %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div>
    <% flash.each do |key, msg| %>
      <%= content_tag :p, :id => key do %>
        <%= msg %>
      <% end %>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>