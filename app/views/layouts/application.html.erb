<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title>Etheos Imprint eResourse Planning System</title>
  <%= stylesheet_link_tag    "application", :media => 'all' %>  
  <%= javascript_include_tag "application" %>
  <%= yield :head %>
  <%= csrf_meta_tags %>
  <!-- Javascript -->
  <%= yield(:jquery_script) %> 
</head>

<body>
  
  <div id="container">
    <% if user_signed_in? %>
      <% unless action_name == "show" %>
        <%= render "/layouts/top_menu" %>
      <% end %>
    <% end %>
    
    <% flash.each do |key, msg| %>
      <%= content_tag :p, :id => key do %>
        <%= msg %>
        <span><%= link_to '[X]', '#', :style => "text-decoration: none; color: white;" %></span>
      <% end %>
    <% end %>

    <%= yield %>
  </div>
  
</body>

  <% unless action_name == "show" %>
    <div id="footer">Copyright &copy; iCode Solution 2012-2013. All rights reserved.</div>
  <% end %>
</html>


