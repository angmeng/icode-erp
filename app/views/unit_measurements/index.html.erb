<h1>Listing unit_measurements</h1>

<table class="black-line-table">
  <tr>
    <th width="50">Code</th>
    <th width="200">Desc</th>
    <th width="60"></th>
    <th width="60"></th>
    <th width="60"></th>
  </tr>

<% @unit_measurements.each do |unit_measurement| %>
  <tr>
    <td><%= unit_measurement.code %></td>
    <td><%= unit_measurement.desc %></td>
    <td><%= link_to 'Show', unit_measurement %></td>
    <td><%= link_to 'Edit', edit_unit_measurement_path(unit_measurement) %></td>
    <td><%= link_to 'Destroy', unit_measurement, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

