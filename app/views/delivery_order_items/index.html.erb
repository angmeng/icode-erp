<% @delivery_order_items.each do |delivery_order_item| %>
  <tr>
    <td><%= delivery_order_item.sales_order_item_id %></td>
    <td><%= delivery_order_item.so_date %></td>
    <td><%= delivery_order_item.delivery_qty %></td>
    <td><%= delivery_order_item.order_qty %></td>
    <td><%= delivery_order_item.unit_price %></td>
    <td><%= delivery_order_item.balance_qty %></td>
