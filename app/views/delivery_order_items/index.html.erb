    <td><%= delivery_order_item.do_status %></td>
    <td><%= delivery_order_item.part_no %></td>
    <td><%= delivery_order_item.client_lot %></td>
    <td><%= delivery_order_item.client_po %></td>
    <td><%= delivery_order_item.department %></td>
    <td><%= delivery_order_item.dept_current_stock %></td>
    <td><%= link_to 'Show', delivery_order_item %></td>
    <td><%= link_to 'Edit', edit_delivery_order_item_path(delivery_order_item) %></td>
    <td><%= link_to 'Destroy', delivery_order_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
