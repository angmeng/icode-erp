<% if @listing_categories.present? %>
  <% if roles.include?(InventoryManagementSystem::PRODUCT_FINISH_GOOD_RECOVER) %>
    <%= link_recover(recover_product_category_path(@listing_categories)) %>
  <% else %>
    <%= not_link_recover %>
  <% end %>
<% else %>
  <%= not_link_recover %>
<% end %>

<div id="product_layout" class="easyui-layout" style="width:auto;height:500px;">  
  <div region="west" split="true" title="KIV Finish Goods Product Categories" style="width:300px;">
    <%= render "/products/category_kiv", :categories => @categories %>
  </div>  
  <div region="center" title="KIV Finish Goods Product Details" style="padding:5px;background:#eee;">
    <div id = "loading_products">
      <%= render "/products/product_details", :data => @listing_categories, :field_id => @field_id %>
    </div>
  </div>  
</div> 

<div class="icon_tag">
  <%= link_close_button %>
</div>