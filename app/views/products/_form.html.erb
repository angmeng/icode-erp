<%= render "/layouts/block_alert" %>

<%= form_for(@product) do |f| %>
  <%= hidden_field_tag "add_category_id", params[:add_category_id] %>
  <%= hidden_field_tag "category_type", params[:category_type] %>
  <table>
    <tr>
      <td width="170" class="bolder">
        <% if action_name == "edit" %>
          Current Product No.
        <% else %>
          Previous Product No.
        <% end %>
      </td>
      <td>
        <% if action_name == 'edit' %>
          <%= @product.code %>
        <% else %>
          <%= ("%05d" % company.sn_product_id_no) rescue '0' %>
        <% end %>
      </td>
      <td class="bolder">
        <% unless action_name == "edit" %>
          <%= check_box_tag "jump", "yes" %>Jump
        <% end %>
      </td>
      <td></td>
    </tr>
    <tr>
      <td class="bolder">Category Description</td>
      <td>
        <%#= f.text_field :product_name, :required => "true", :validType => "maxLength[15]", :class => "easyui-validatebox"  %>
        <% if action_name == "edit" %>
          <% params[:category_description] = @product.product_category.desc rescue '-' %>
        <% end %>
        <%= text_field_tag :category_description, params[:category_description], :required => "true", :validType => "maxLength[15]", :class => "easyui-validatebox" %>
      </td>
      <td class="bolder"><%= f.label :unit_measurement_id, "U/M" %></td>
      <td>
        <% if session[:po_um_id].present? %>
          <%= UnitMeasurement.find(session[:po_um_id].to_i).code rescue '-'  %>
          <%= f.select :unit_measurement_id, options_from_collection_for_select(unit_measurement, 'id', 'code', session[:po_um_id].to_i), { :include_blank => true }, :style => "display:none;" %>
        <% else %>
          <%= f.select :unit_measurement_id, options_from_collection_for_select(unit_measurement, 'id', 'code', @product.unit_measurement_id.to_i), { :include_blank => true } %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td style="vertical-align: top;" class="bolder">Description</td>
      <td>
        <% if session[:po_desc].present? %>
          <%= simple_format(session[:po_desc]) %>
          <%= f.text_area :desc, :value => session[:po_desc], :rows => 3, :style => "display:none;" %>
        <% else %>
          <%= f.text_area :desc, :required => "true", :validType => "maxLength[255]", :class => "easyui-validatebox", :rows => 3 %>
        <% end %>
      </td>
      <td></td>
      <td></td>
    </tr>
    <%#*<tr>%>
      <%#*<td>Color / Grade</td>%>
      <%#*<td>%>
        <%#= f.text_field :color_grade, :validType => "maxLength[255]", :class => "easyui-validatebox" %>
      <%#*</td>%>
      <%#*<td></td>%>
      <%#*<td></td>%>
      <%#*<td></td>%>
    <%#*</tr>%>
    <%#*<tr>%>
      <%#*<td>Version</td>%>
      <%#*<td>%>
        <%#= f.text_field :version, :validType => "maxLength[40]", :class => "easyui-validatebox" %>
      <%#*</td>%>
      <%#*<td></td>%>
      <%#*<td></td>%>
      <%#*<td></td>%>
    <%#*</tr>%>
    <%#*<tr>%>
      <%#*<td>Model</td>%>
      <%#*<td>%>
        <%#= f.text_field :model, :validType => "maxLength[40]", :class => "easyui-validatebox" %>
      <%#*</td>%>
      <%#*<td></td>%>
      <%#*<td></td>%>
      <%#*<td></td>%>
    <%#*</tr>%>
    <tr>
      <td class="bolder">Part No.</td>
      <td><%= f.text_field :part_no, :validType => "maxLength[40]", :class => "easyui-validatebox" %></td>
      <td></td>
      <td></td>
    </tr>
    
    <tr>
      <td class="bolder">Tarif Code</td>
      <td>
        <%#= f.select :tarif_code, options_from_collection_for_select(sales_tax_exemption, "tarif_code", "tarif_code", @product.tarif_code), :include_blank => 'Select Tarif Code', :style => "width:400px;" %>
        <%#= select_tag :tarif_code, options_from_collection_for_select(sales_tax_exemption, "id", "tarif_code", params[:tarif_code]), {:include_blank => 'Select Tarif Code', :onchange => "getcombo_perihal_barang(this)"} %>
        <% if action_name == "edit" %>
          <%= select_tag :sales_tax_exemption_id, options_from_collection_for_select(sales_tax_exemption, "id", "tarif_code", @product.sales_tax_exemption_id), {:include_blank => 'Select Tarif Code', :onchange => "getcombo_perihal_barang(this)"} %>
        <% else %>
          <%= select_tag :sales_tax_exemption_id, options_from_collection_for_select(sales_tax_exemption, "id", "tarif_code", params[:tarif_code]), {:include_blank => 'Select Tarif Code', :onchange => "getcombo_perihal_barang(this)"} %>
        <% end %>
        <span id="show_barang"><%= @product.sales_tax_exemption.perihal_barang if @product.sales_tax_exemption.present? %></span>
      </td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td class="bolder">Part Weight</td>
      <td><%= f.text_field :part_weight, :style => "text-align:right;", :required => "true" %> g</td>
      <td></td>
      <td></td>
    </tr>
    <% if params[:category_type].to_i == ProductCategory::FINISH_GOOD %>
      <tr>
        <td class="bolder">Selling Price</td>
        <td><%= f.text_field :selling_price, :style => "text-align:right;", :required => "true" %></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
    <tr>
      <td class="bolder">Cutoff Date</td>
      <td>
        <% if action_name == "edit" %>
            <% if @product.cutoff_date.blank? %>
              <%= f.text_field :cutoff_date, :class => "cutoffdate" %>
            <% else %>
              <%= f.text_field :cutoff_date, :class => "cutoffdate", :value => @product.cutoff_date.strftime("%d-%m-%Y") %>
            <% end %>
        <% else %>
          <%= f.text_field :cutoff_date, :class => "cutoffdate" %>
        <% end %>
      </td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td class="bolder">Opening Stock</td>
      <td><%= f.text_field :opening_stock, :style => "text-align:right;", :class => "ten_digit_1" %></td>
      <td></td>
      <td></td>
    </tr>
    
    <tr>
      <td class="bolder">Current Stock</td>
      <td class="current_stock_val">
        <% if action_name == "edit" %>
          <%= @product.current_stock rescue '-' %>
        <% end %>
      </td>
      <%#*<td>%>
        <%#= f.text_field :current_stock, :style => "text-align:right;", :class => "ten_digit_2" %>
      <%#*</td>%>
      <td></td>
      <td></td>
    </tr>
    
    <% if action_name == "edit" %>
      <% if @product.product_category %>
        <% unless @product.product_category.category_type.to_i == ProductCategory::FINISH_GOOD  %>
            <tr><td colspan="10"><hr/></td></tr>
            <tr>
              <td class="bolder">New Sourcing</td>
              <td>
                <%= f.fields_for :product_vendors do |builder| %>
                  <% if builder.object.new_record? %>
                    <%= builder.select :trade_company_id, options_from_collection_for_select(trade_company, 'id', 'name', params[:tc].to_i), { :include_blank => true } %>
                    U/P <%= builder.text_field :unit_price %>
                    <br/>
                  <% end %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td class="bolder">Sourcing</td>
              <td colspan="2">
                <table>
                  <%= f.fields_for :product_vendors do |builder| %>
                    <% unless builder.object.new_record? %>
                      <% if builder.object.trade_company_id.present? %>
                            <tr>
                              <td><%= builder.object.trade_company.name %></td>
                              <td>(U/P: <%= number_with_precision(builder.object.unit_price, :precision => 4) rescue '-' %>)</td>
                              <td><%= builder.check_box :_destroy %>Remove</td>
                            </tr>
                      <% end %>
                    <% end %>
                  <% end %>
                </table>
              </td>
            </tr>
        <% end %>
      <% end %>
    <% else %>
    
        <% unless params[:category_type].to_i == ProductCategory::FINISH_GOOD  %>

            <tr><td colspan="10"><hr/></td></tr>
            <tr><td class="bolder">Sourcing</td></tr>
            <tr>
              <td></td>
              <td>
                <%= f.fields_for :product_vendors do |builder| %>
                  <% if builder.object.new_record? %>
                    <% if session[:po_vendor_id].present? and session[:po_up].present? %>
                      <b>Company Name: </b><%= TradeCompany.find_by_id(session[:po_vendor_id]).name rescue '-' %>
                      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                      <b>Unit Price: </b><%= number_with_precision(session[:po_up], :precision => 4, :separator => '.', :delimiter => ',') rescue '-'  %>
                      <%= builder.select :trade_company_id, options_from_collection_for_select(TradeCompany.order("name").all, 'id', 'name', session[:po_vendor_id].to_i), { :include_blank => true }, :style => "display:none;" %>
                      <%= builder.text_field :unit_price, :value => session[:po_up], :style => "display:none;" %>
                    <% else %>
                      <%= builder.select :trade_company_id, options_from_collection_for_select(TradeCompany.order("name").all, 'id', 'name', params[:tc].to_i), { :include_blank => true } %>
                      U/P <%= builder.text_field :unit_price %>
                    <% end %>
                    <br/>
                  <% end %>
                <% end %>
              </td>
              <td></td>
              <td colspan="2">
                <ol>
                  <%= f.fields_for :product_vendors do |builder| %>
                    <% unless builder.object.new_record? %>
                      <% if builder.object.trade_company_id.present? %>
                        <li>
                          <%= builder.object.trade_company.name %>
                          <%= builder.check_box :_destroy %>Remove
                        </li>
                      <% end %>
                    <% end %>
                  <% end %>
                </ol>
              </td>
            </tr>
            
        <% end %>
        
    <% end %>
  </table>

  <br/>
  
  <div align="right">
    <%= link_close_button %>
    <%= f.submit "Submit" %>
  </div>
<% end %>
