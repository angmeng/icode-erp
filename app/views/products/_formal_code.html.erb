<div id="popup_container">
  <div class="title_head">
    <strong style="color:white;">
      <% if action_name == "non_operation" %>
        NON OPERATION
      <% elsif action_name == "operation" %>
        OPERATION
      <% elsif action_name == "finish_good" %>  
        FINISH GOODS
      <% else %>
        -
      <% end %>
    </strong>
    <%#= search_button %>
  </div>
  <div><%#= render "search_purchase_requisition" %></div>

  <div id="horizontal">
    <div id="left-pane">
      <%= render "/products/category", :categories => @categories %>
    </div>
    <div id="right-pane"><div id="product_ajax"></div></div>
  </div>

  <div class="icon_tag">
    <%= link_close_button %>
  </div>
</div>
            
<% content_for :jquery_script do %>
  <script>
      $(document).ready(function() {
          $("#horizontal").kendoSplitter({
              panes: [
                  { collapsible: true, size: "500px" },
                  { collapsible: false },
                  { collapsible: true, size: "220px" }
              ]
          });
          
          $('a').click(function (event){ 
               event.preventDefault(); 
               $.ajax({
                  url: $(this).attr('href'),
                  success: function(data) {
                    $(this).css("color", "blue").css("font-weight", "bold");
                    $("#product_ajax").html(data);
                  }
               })
               return false;
          });
      });
  </script>
<% end %>