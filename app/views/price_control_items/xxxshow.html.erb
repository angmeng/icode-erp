<div style="background-color:blue"><strong style="color:white;">SHOW PRODUCT PRICE CONTROL ITEM</strong></div>

<div class="fix_800x450">
  <table>
    <% if @price_control_item.product.present? %>
      <% if @price_control_item.product.product_combobox.present? %>
        <tr>
          <td width="100"><b>Product ID</b></td>
          <td><%= @price_control_item.product.product_combobox.product_code rescue '-' %></td>
        </tr>
        <tr>
          <td><b>Description</b></td>
          <td><%= @price_control_item.product.desc rescue '-' %></td>
        </tr>
        <tr>
          <td><b>Current Stock</b></td>
          <td><%= @price_control_item.product.current_stock rescue '-' %></td>
        </tr>
        <tr>
          <td><b>Part No</b></td>
          <td><%= @price_control_item.part_no rescue '-' %></td>
        </tr>
      <% end %>
    <% end %>
  </table>

  <table>      
    <tr style="background-color: gainsboro;">
      <td></td>
      <td width="100" align="center"><b>OLD</b></td>
      <td width="100" align="center"><b>NEW</b></td>
    </tr>

    <tr>
      <td style="background-color: gainsboro;"><b>Unit Price</b></td>
      <td align="right"><%= four_precision(@price_control_item.old_unit_price) %></td>
      <td align="right"><%= four_precision(@price_control_item.new_unit_price) %></td>
    </tr>

    <tr>
      <td style="background-color: gainsboro;"><b>Effective Date</b></td>
      <td align="center"><%= @price_control_item.old_eff_date.strftime("%d-%m-%Y") rescue '-' %></td>
      <td align="center"><%= @price_control_item.new_eff_date.strftime("%d-%m-%Y") rescue '-' %></td>
    </tr>  
  </table>
</div>

<div class="icon_tag">
  <%= link_close_button %>
</div>