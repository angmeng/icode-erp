<%= title_head "GROUP" %>

<%= form_tag add_group_product_categories_path, :method => :post do %>
  <div id="valid_group">
    <div class="popup_content">
      <table>
        <tr>
          <td><b>Code</b></td>
          <td><%= text_field_tag :code, "", :class => "k-textbox", "required validationMessage" => "Please Enter Code" %></td>
        </tr>
        <tr>
          <td><b>Description</b></td>
          <td><%= text_field_tag :desc, "", :class => "k-textbox", "required validationMessage" => "Please Enter Description" %></td>
        </tr>
        <tr>
          <td><%= hidden_field_tag :parent_id, 0 %></td>
          <td><%= hidden_field_tag :icon, @icon %></td>
          <td><%= hidden_field_tag :category_type, @category_type %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="icon_tag">
    <%= link_save_button %>
    <%= link_close_button %>
  </div>
<% end %>

<%= render "js_group" %>