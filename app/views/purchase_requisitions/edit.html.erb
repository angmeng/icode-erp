<div style="background-color:blue"><strong style="color:white;">MANAGE APPROVE / REJECT PURCHASE REQUISITION</strong></div>

<div>
    <table width="100%" class="header_content">
      <tr>
        <td><h3>Managing PR Items</h3></td>
        <td align="right">
          <table>
            <tr>
              <td><b>PR no.# : </b></td>
              <td align="right"><%= @purchase_requisition.pr_no %></td>
            </tr>
            <tr>
              <td><b>PR Date : </b></td>
              <td><%= @purchase_requisition.created_at.strftime("%d-%m-%Y") %></td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  
    <div class="new_form">
      <% if @edit_items.present? %>
        <%= render "/purchase_requisitions/details_from_purchase_requisition_items", :pr => @edit_items %>
      <% end %>
    </div>

    <div>
      
      <table>
        <tr>
          
          <td width="300" style="vertical-align: top;">
            <b>REQUESTER (DEPT. HEAD)</b>
            <table>
              <tr>
                <td style="vertical-align: top;">
                  <table>
                    <tr>
                      <td><b>Name</b></td>
                      <td><%= @user.name %></td>
                    </tr>
                    <tr>
                      <td><b>Date</b></td>
                      <td><%= @purchase_requisition.requested_by_date.strftime("%d-%m-%Y") %></td>
                    </tr>
                    
                    <% if @purchase_requisition.requested_by.to_i == current_user.id %>
                      <% if @purchase_requisition.tasks == current_user.id %>
                        <tr>
                          <td><b>Approved?</b></td>
                          <td><%= link_to "YES", yes_approval_requester_purchase_requisition_path(@purchase_requisition), :method => :put, :confirm => "Are you sure?" %></td>
                        </tr>
                      <% end %>
                    <% end %>
                        
                    <% if @purchase_requisition.remark.present? %>
                      <tr>
                        <td><b>Remark</b></td>
                        <td style="color:white; background: red;"><%= @purchase_requisition.remark %></td>
                      </tr>
                    <% end %>
                  </table>
                </td>
                
              </tr>
            </table>
          </td>
          <td width="60"><%= image_tag "arrow-right.png", :class => "cube35" %></td>

          <% if @logic.include?(2) %>
            <td width="300" style="vertical-align: top;">
                <b>APPROVAL(1)</b>
                <% if @purchase_requisition.approved_by_level_two.present? %>
                    <table>
                      <tr>
                        <td><b>Name</b></td>
                        <td><%= @app_lvl2.name %></td>
                      </tr>
                      <tr>
                        <td><b>Date</b></td>
                        <td><%= @purchase_requisition.approved_by_level_two_date.strftime("%d-%m-%Y") %></td>
                      </tr>
                    </table>
                <% else %>
                    <% if @purchase_requisition.status == PurchaseRequisition::LEVEL_TWO %>
                        <% if @purchase_requisition.tasks == current_user.id %>
                            <table>
                              <tr>
                                <td><b>Name</b></td>
                                <td><%= current_user.name  %></td>
                              </tr>
                              <tr>
                                <td><b>Date</b></td>
                                <td><%= Date.today.strftime("%d-%m-%Y") %></td>
                              </tr>
                              <tr>
                                  <td><b>Approved?</b></td>
                                  <td>
                                    <%= link_to "YES", yes_approval_one_purchase_requisition_path(@purchase_requisition), :method => :put, :confirm => "Are you sure?" %>
                                    <%= link_to "NO", "#", :class => "pr_remark_one_link" %>
                                  </td>
                              </tr>
                            </table>
                        <% else %>
                            <table>
                              <tr>
                                <td></td><td>PENDING</td>
                              </tr>
                              <tr>
                                <td></td><td></td>
                              </tr>
                            </table>
                        <% end %>
                    <% end %>
                <% end %>
            </td>
            <td width="60"><%= image_tag "arrow-right.png", :class => "cube35" %></td>
          <% end %>
          
          <!--------------------- Approval(OM) --------------------->
          <% if @logic.include?(3) %>
            <td width="300" style="vertical-align: top;">
                <b>APPROVAL(OM)</b>
                <% if @purchase_requisition.approved_by_level_three.present? %>
                    <table>
                      <tr>
                        <td><b>Name</b></td>
                        <td><%= @app_lvl3.name %></td>
                      </tr>
                      <tr>
                        <td><b>Date</b></td>
                        <td><%= @purchase_requisition.approved_by_level_three_date.strftime("%d-%m-%Y") %></td>
                      </tr>
                    </table>
                <% else %>
                    <% if @purchase_requisition.status == PurchaseRequisition::LEVEL_THREE %>
                        <% if @purchase_requisition.tasks == current_user.id %>
                            <table>
                              <tr>
                                <td><b>Name</b></td>
                                <td><%= current_user.name  %></td>
                              </tr>
                              <tr>
                                <td><b>Date</b></td>
                                <td><%= Date.today.strftime("%d-%m-%Y") %></td>
                              </tr>
                              <tr>
                                  <td><b>Approved?</b></td>
                                  <td>
                                    <%= link_to "YES", yes_approval_om_purchase_requisition_path(@purchase_requisition), :method => :put, :confirm => "Are you sure?" %>
                                    <%= link_to "NO", "#", :class => "pr_remark_om_link" %>
                                  </td>
                              </tr>
                            </table>
                        <% else %>
                            <table>
                              <tr>
                                <td></td><td>PENDING</td>
                              </tr>
                              <tr>
                                <td></td><td></td>
                              </tr>
                            </table>
                        <% end %>
                    <% end %>
                <% end %>
            </td>
            <td width="60"><%= image_tag "arrow-right.png", :class => "cube35" %></td>
          <% end %>
          
          <!--------------------- Approval(3) --------------------->
          <% if @logic.include?(5) %>
            <td width="300" style="vertical-align: top;">
                <b>APPROVAL(3)</b>
                <% if @purchase_requisition.approved_by_level_five.present? %>
                    <table>
                      <tr>
                        <td><b>Name</b></td>
                        <td><%= @app_lvl4.name %></td>
                      </tr>
                      <tr>
                        <td><b>Date</b></td>
                        <td><%= @purchase_requisition.approved_by_level_five_date.strftime("%d-%m-%Y") %></td>
                      </tr>
                    </table>
                <% else %>
                    <% if @purchase_requisition.status == PurchaseRequisition::LEVEL_FIVE %>
                        <% if @purchase_requisition.tasks == current_user.id %>
                                <table>
                                  <tr>
                                    <td><b>Name</b></td>
                                    <td><%= current_user.name %></td>
                                  </tr>
                                  <tr>
                                    <td><b>Date</b></td>
                                    <td><%= Date.today.strftime("%d-%m-%Y") %></td>
                                  </tr>
                                  <tr>
                                      <td><b>Approved?</b></td>
                                      <td>
                                        <%= link_to "YES", yes_approval_three_purchase_requisition_path(@purchase_requisition), :method => :put, :confirm => "Are you sure?" %>
                                        <%= link_to "NO", "#", :class => "pr_remark_three_link" %>
                                      </td>
                                  </tr>
                                </table>
                        <% else %>
                                <table>
                                  <tr>
                                    <td></td><td>PENDING</td>
                                  </tr>
                                  <tr>
                                    <td></td><td></td>
                                  </tr>
                                </table>
                        <% end %>
                    <% end %>
                <% end %>
            </td>
          <% end %>
            
          <% if @purchase_requisition.status == PurchaseRequisition::SUBMIT_PO %>
            <% unless @user.level == User::LEVEL_FIVE %>
              <td width="60"><%= image_tag "arrow-right.png", :class => "cube35" %></td>
            <% end %>
          <% end %>
          
         <!--------------------- Completed --------------------->
          <% if @purchase_requisition.status == PurchaseRequisition::SUBMIT_PO or @purchase_requisition.status == PurchaseRequisition::SUBMIT_RN %>
            <td width="300"><%=  image_tag("complete-Icon.png", :alt => "completed", :size => "50x50") %></td>
          <% end %>
          
        </tr>
      </table>       

    </div>
    
</div>

<div class="icon_tag">
  
  <% if @purchase_requisition.requested_by.to_i == current_user.id %>
    <% if @purchase_requisition.tasks == current_user.id %>
      <%= not_link_show %>
      <span id="on_edit" editClass="iframe_800x600"><%= not_link_edit %></span>
      <span id="on_remove"><%= not_link_remove %></span>
      <%= not_link_printable %>
    <% end %>
  <% end %>
  
  <%= link_close_button %>
      
</div>
  
<div id='pr_remark_one' class='easyui-window' title='Remark for Approval(1)' closed='true' minimizable='false' style='width:400px;height:250px;'>
  <%= form_tag no_approval_one_purchase_requisition_path(@purchase_requisition), :method => :put do %>
    Remark:<br/>
    <%= text_area_tag :remark, params[:remark], :cols => 40, :required => 'true' %><br/>
    <%= submit_tag "Submit" %>
  <% end %>
</div>

<div id='pr_remark_om' class='easyui-window' title='Remark for Approval(OM)' closed='true' minimizable='false' style='width:400px;height:250px;'>
  <%= form_tag no_approval_om_purchase_requisition_path(@purchase_requisition), :method => :put do %>
    Remark:<br/>
    <%= text_area_tag :remark, params[:remark], :cols => 40, :required => 'true' %><br/>
    <%= submit_tag "Submit" %>
  <% end %>
</div>

<div id='pr_remark_three' class='easyui-window' title='Remark for Approval(3)' closed='true' minimizable='false' style='width:400px;height:250px;'>
  <%= form_tag no_approval_three_purchase_requisition_path(@purchase_requisition), :method => :put do %>
    Remark:<br/>
    <%= text_area_tag :remark, params[:remark], :cols => 40, :required => 'true' %><br/>
    <%= submit_tag "Submit" %>
  <% end %>
</div>

