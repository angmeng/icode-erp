<%= form_for(@stock_out) do |f| %>
  <div class="fix_800x450">
    <table>
      <tr>
        <td width="130"><b>Transfer Note No</b></td>
        <td><%= company.sn_transfer_slip_no + 1 %></td>
      </tr>
      <tr>
        <td><b>Product ID *</b></td>
        <td>
          <%= f.select :product_id , options_for_select(product_non_operation_n_operation_with_pr_combobox, @stock_out.product_id), { :include_blank => true }, { :onchange => "getCombo_product(this)", :id => "kendo_combobox", :style => "width: 400px;" }  %>&nbsp;<span id="current_product_stock"></span>
          <span id="stock_value" style="display: none;"></span>
        </td>
      </tr>
      <tr>
        <td><b>Description</b></td>
        <td id="stock_out_description"></td>
      </tr>
      <tr>
        <td><b>Quantity *</b></td>
        <td>
          <%= f.text_field :quantity, :size => 8 %>&nbsp;<b>U/M</b>&nbsp;<span id="stock_out_um"></span>
          <%= f.hidden_field "unit_measurement_id" %>
        </td>
      </tr>
      <tr>
        <td><b>Balance</b></td>
        <td>
          <span id="stock_out_balance_span"></span>
          <%= f.hidden_field :balance %>
        </td>
      </tr>
      <tr>
        <td><b>Collector Name *</b></td>
        <td><%= f.text_field :collector_name %></td>
      </tr>
      <tr>
        <td><b>Location *</b></td>
        <td><%= f.text_field :location %></td>
      </tr>
      <tr>
        <td><b>Reference No</b></td>
        <td><%= f.text_field :reference_no %></td>
      </tr>
      <tr>
        <td><b>Issued By</b></td>
        <td>
          <%= current_user.name %>
          <%= f.hidden_field :issued_by, :value => current_user.id %>
        </td>
      </tr>
    </table>
  </div>
  <div class="icon_tag">
    <span id="stock_out_save_button"><%= link_save_button %></span>
    <%= link_close_button %>
  </div>
  
<% end %>

<% content_for :jquery_script do %>
  <script>
    $(document).ready(function() {
        $("#stock_out_quantity").keyup(function(){
          var a = $("#stock_value").html();
          var b = $("#stock_out_quantity").val();
          balance = a - b;
          $("#stock_out_balance").val(balance);
          $("#stock_out_balance_span").html(balance);
          
          if (balance < 0){ 
            if (balance){ alert("Over Stock"); }
            else { alert("Should not use negative value."); }
            $("#stock_out_save_button").hide(); 
          } 
          else {
            $("#stock_out_save_button").show();
          }
        });
    });

  </script>

<% end %>
