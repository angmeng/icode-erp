<%= form_for(@product_price) do |f| %>
  <%= render "/home/errors_full_messages", :error_messages => @product_price %>

  <table>
    <tr>
      <td><%= f.label :trade_company_id, "Company" %></td>
      <td><%= f.select :trade_company_id, options_from_collection_for_select(TradeCompany.order("code").all, 'id', 'code'), { :include_blank => true } %></td>
      <td id="company_name"></td>
    </tr>
    <tr>
      <td><%= f.label :product_category_id %></td>
      <td><%= f.number_field :product_category_id %></td>
      <td id="product_name"></td>
    </tr>
    <tr>
      <td><%= f.label :currency_id %></td>
      <td><%= f.select :currency_id, options_for_select([["AUD", ProductPrice::AUD], ["RM", ProductPrice::RM],["SGD", ProductPrice::SGD],["USD", ProductPrice::USD],["YEN", ProductPrice::YEN]]) %></td>
      <td id="currency_name"></td>
    </tr>
    <tr>
      <td><%= f.label :unit_price %></td>
      <td><%= f.text_field :unit_price %></td>
      
    </tr>
    <tr>
      <td><%= f.label :price_in %></td>
      <td><%= f.number_field :price_in %></td>
    </tr>
  </table>
  <%= f.submit %>
<% end %>
