<h1>Listing product_prices</h1>

<table>
  <tr>
    <th>Trade company</th>
    <th>Product category</th>
    <th>Currency</th>
    <th>Unit price</th>
    <th>Price in</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @product_prices.each do |product_price| %>
  <tr>
    <td><%= product_price.trade_company.code rescue '-' %></td>
    <td><%= product_price.product_category_id %></td>
    <td><%= product_price.currency.name rescue '-' %></td>
    <td><%= product_price.unit_price %></td>
    <td><%= product_price.price_in %></td>
    <td><%= link_to 'Show', product_price %></td>
    <td><%= link_to 'Edit', edit_product_price_path(product_price) %></td>
    <td><%= link_to 'Destroy', product_price, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

